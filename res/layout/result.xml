<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0CE87E" >
    
    
     <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="log in to ubresources or signup to ubresources.com for an account"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:background="#35E869"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
<View                                      
   android:layout_width="fill_parent"
   android:layout_height="2dp"
   android:layout_marginBottom="10dp"     
   android:background="#C0C0C0"/>
     

       <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="FetSoft"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#1B7836"
            android:textSize="25sp"
            android:typeface="serif" />
     
    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/email1"
        android:layout_marginTop="17dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
      android:layout_centerHorizontal="true"
      android:ems="10"
        android:textColor="@android:color/white"
    />
     
     
    <EditText
        android:id="@+id/pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:ems="7"
        android:layout_alignTop="@+id/pass1"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="13dp"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="40dp"
        android:hint="password"
        android:textColor="@android:color/white"
    />
    
   
            <Button
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="#35E83E"
            android:text="Login" />
    
    <TextView
        android:id="@+id/error"
        android:textColor="#FF0000"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
    />
 
</LinearLayout>
</ScrollView>